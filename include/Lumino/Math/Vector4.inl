		-v1.Y,
		-v1.Z,
		-v1.W);
}

//-------------------------------------------------------------------------
//
//-------------------------------------------------------------------------
inline bool Vector4::operator == (const Vector4& v) const
{
	return (X == v.X && Y == v.Y && Z == v.Z && W == v.W);
}

//-------------------------------------------------------------------------
//
//-------------------------------------------------------------------------
inline bool Vector4::operator != (const Vector4& v) const
{
	return (X != v.X || Y != v.Y || Z != v.Z || W != v.W);
}

