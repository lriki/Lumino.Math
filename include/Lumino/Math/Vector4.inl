//-------------------------------------------------------------------------
//
//-------------------------------------------------------------------------
inline Vector4::Vector4()
{
	X = Y = Z = W = 0.0f;
}

//-------------------------------------------------------------------------
//
//-------------------------------------------------------------------------
inline Vector4::Vector4(float x_, float y_, float z_, float w_)
{
	X = x_;
	Y = y_;
	Z = z_;
    W = w_;
}

//-------------------------------------------------------------------------
//
//-------------------------------------------------------------------------
inline void Vector4::Set(float x_, float y_, float z_, float w_)
{
	X = x_;
	Y = y_;
	Z = z_;
    W = w_;
}

//-------------------------------------------------------------------------
//
//-------------------------------------------------------------------------
inline const Vector2& Vector4::GetXY() const
{
	return *reinterpret_cast<const Vector2*>(this);
}

//-------------------------------------------------------------------------
//
//-------------------------------------------------------------------------
inline const Vector3& Vector4::GetXYZ() const
{
	return *reinterpret_cast<const Vector3*>(this);
}

//-------------------------------------------------------------------------
//
//-------------------------------------------------------------------------
inline Vector4& Vector4::operator += (const Vector4& v)
{
	X += v.X;
	Y += v.Y;
	Z += v.Z;
	W += v.W;
	return (*this);
}

//-------------------------------------------------------------------------
//
//-------------------------------------------------------------------------
inline Vector4& Vector4::operator += (float v)
{
	X += v;
	Y += v;
	Z += v;
	W += v;
	return (*this);
}

//-------------------------------------------------------------------------
//
//-------------------------------------------------------------------------
inline Vector4& Vector4::operator -= (const Vector4& v)
{
	X -= v.X;
	Y -= v.Y;
	Z -= v.Z;
	W -= v.W;
	return (*this);
}

//-------------------------------------------------------------------------
//
//-------------------------------------------------------------------------
inline Vector4& Vector4::operator -= (float v)
{
	X -= v;
	Y -= v;
	Z -= v;
	W -= v;
	return (*this);
}

//-------------------------------------------------------------------------
//
//-------------------------------------------------------------------------
inline Vector4& Vector4::operator *= (const Vector4& v)
{
	X *= v.X;
	Y *= v.Y;
	Z *= v.Z;
	W *= v.W;
	return (*this);
}

//-------------------------------------------------------------------------
//
//-------------------------------------------------------------------------
inline Vector4& Vector4::operator *= (float v)
{
	X *= v;
	Y *= v;
	Z *= v;
	W *= v;
	return (*this);
}

//-------------------------------------------------------------------------
//
//-------------------------------------------------------------------------
inline Vector4& Vector4::operator /= (const Vector4& v)
{
	X /= v.X;
	Y /= v.Y;
	Z /= v.Z;
	W /= v.W;
	return (*this);
}

//-------------------------------------------------------------------------
//
//-------------------------------------------------------------------------
inline Vector4& Vector4::operator /= (float v)
{
	v = 1.0f / v;
	X *= v;
	Y *= v;
	Z *= v;
	W *= v;
	return (*this);
}

//-------------------------------------------------------------------------
//
//-------------------------------------------------------------------------
inline Vector4 operator + (const Vector4& v1, const Vector4& v2)
{
	return Vector4(
		v1.X + v2.X,
		v1.Y + v2.Y,
		v1.Z + v2.Z,
		v1.W + v2.W);
}

